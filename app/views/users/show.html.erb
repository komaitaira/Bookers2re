<div class="container">
  <div class="row">

    <div class="col-xs-3">
      <h2>User info</h2>
      <!-- 以下にプロフィール画像 -->
      <div>
        <%= attachment_image_tag @user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "100x100" %>
      </div>

      <table class="table">
        <tbody>
  	      <tr>
  	        <th>name</th>
  	        <th><%= @user.name %></th>
  	      </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
            <!-- 上記にinstructionのカラムが必要 -->
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
      </div>

      <!-- form_for部分 -->
      <h2>New book</h2>
      <%= form_for (@book) do |f| %>
        <div class="field row">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: "col-xs-12" %>
        </div>
        <div class="field row">
  	      <label for="book_opinion">Opinion</label>
  	      <%= f.text_area :body, class: "col-xs-12" %>
        </div>
        <div class="action row">
          <%= f.submit "Create Book", class: "col-xs-12 btn btn-primary" %>
        </div>
      <% end %>
    </div>




    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
  	      <% @books.each do |book| %>
  	        <tr>
  	  	      <td>
                <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "50x50" %>
                <% end %>
              </td>
  	          <td><%= link_to book.title, book_path(book.id) %></td>
  	          <td><%= book.body %></td>
  	        </tr>
  	      <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>