<h2>User info</h2>
<!-- 以下にプロフィール画像 -->
<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
</div>

<table>
  <tbody>
  	<tr>
  	  <th>name</th>
  	  <th><%= @user.name %></th>
  	</tr>
    <tr>
      <th>introduction</th>
      <th></th>
      <!-- 上記にinstructionのカラムが必要 -->
    </tr>
  </tbody>
</table>

<div>
  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
  <% end %>
</div>

<!-- form_for部分 -->
<h2>New book</h2>
<%= form_for (@book) do |f| %>
  <div class="field">
    <label for="book_title">Title</label><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
  	<label for="opinion">Opinion</label><br />
  	<%= f.text_area :body %>
  </div>
  <%= f.submit "Create Book" %>
<% end %>




<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  	<% @books.each do |book| %>
  	  <tr>
  	  	<th>
          <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: "no_image.jpg" %>
          <% end %>
        </th>
  	    <th><%= link_to book.title, book_path(book.id) %></th>
  	    <th><%= book.body %></th>
  	  </tr>
  	<% end %>
  </tbody>
</table>
