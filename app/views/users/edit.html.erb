<h2>User info</h2>

<% if @user.errors.any? %>
　<div class="error_explanation">
    <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user) do |f| %>
  <div class="field">
  	<label for="user_name">Name</label>
    <%= f.text_field :name %>
  </div>
  <div class="field">
  	<label for="prpfile_image">Image</label>
  	<%= f.attachment_field :profile_image, placeholder: "ファイルを選択" %>
  </div>
  <div class="field">
  	<label for="Introduction">Introduction</label>
  	<%= f.text_area :introduction %>
  	<!-- introductionカラムのデータ -->
  </div>
  <%= f.submit "Update User" %>
<% end %>