<h2>Users</h2>

<table>
  <thead>
  	<tr>
  	  <th>image</th>
  	  <th>name</th>
  	  <th></th>
  	</tr>
  </thead>
  <tbody>
  	<% @users.each do |user| %>
  	  <tr>
  	    <td>
  	      <%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: "no_image.jpg" %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
  	  </tr>
  	<% end %>
  </tbody>
</table>