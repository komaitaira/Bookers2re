<h2>Editing Book</h2>

<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

  <% if @book.errors.any? %>
　  <div class="error_explanation">
	  <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label for="book_title">Title</label><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
  	<label for="opinion">Opinion</label><br />
  	<%= f.text_area :body %>
  </div>
  <%= f.submit "Update Book" %>
<% end %>

<p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>