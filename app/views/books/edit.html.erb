<h2>Editing Book</h2>

<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
  <div class="field">
    <label for="book_title">Title</label><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
  	<label for="opinion">Opinion</label><br />
  	<%= f.text_area :body %>
  </div>
  <%= f.submit "Update Book" %>
<% end %>

<p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>