<h2>Book detail</h2>
<tbody>
  <tr>
  	<th>
      <%= link_to user_path(@book.user_id) do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: "no_image.jpg" %>
      <% end %>
    </th>
  	<th><%= link_to @book.title, book_path(@book.id) %></th>
  	<th><%= @book.body %></th>
  	<!-- ログインしているユーザーのみに編集リンク、削除リンクが表示されるようにする -->
  	<% if @user.id == current_user.id %>
  	  <th><%= link_to "Edit", edit_book_path(@book.id) %></th>
  	　<th><%= link_to "Destroy", book_path(@book.id),method: :delete, "data-confirm" => "本当に消しますか？" %></th>
  	<% end %>
  </tr>
</tbody>