
<div class="container">
  <div class="row">

    <div class="col-xs-3">
      <h2>User info</h2>
      <!-- 以下にプロフィール画像 -->
      <div>
        <%= attachment_image_tag @book.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "100x100" %>
      </div>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
            <!-- 上記にinstructionのカラムが必要 -->
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to "", edit_user_path(@book.user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
      </div>

      <!-- form_for部分 -->
      <h2>New book</h2>
      <%= form_for (@books) do |f| %>
        <div class="field row">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class: "col-xs-12" %>
        </div>
        <div class="field row">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class: "col-xs-12" %>
        </div>
        <div class="action row">
          <%= f.submit "Create Book", class: "col-xs-12 btn btn-primary" %>
        </div>
      <% end %>
    </div>



    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
        	  <th>
              <%= link_to user_path(@book.user_id) do %>
                <%= attachment_image_tag @book.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "50x50" %>
                <nav><%= @book.user.name %></nav>
              <% end %>
            </th>
        	  <td><%= link_to @book.title, book_path(@book.id) %></td>
        	  <td><%= @book.body %></td>
        	  <!-- ログインしているユーザーのみに編集リンク、削除リンクが表示されるようにする -->
        	  <% if @book.user_id == current_user.id %>
        	    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
        	　  <td>
                <%= link_to "Destroy", book_path(@book.id),method: :delete, "data-confirm" => "本当に消しますか？" %>
              </td>
        	  <% end %>
          </tr>
        </tbody>
      </table>
    </div>



  </div>
</div>