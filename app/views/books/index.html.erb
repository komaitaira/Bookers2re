<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  	<% @books.each do |book| %>
  	  <tr>
  	  	<th>
  	  	  <%= link_to user_path(book.user_id) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: "no_image.jpg" %>
          <% end %>
        </th>
  	    <th><%= link_to book.title, book_path(book.id) %></th>
  	    <th><%= book.body %></th>
  	  </tr>
  	<% end %>
  </tbody>
</table>
