<% if @book.errors.any? %>
　<div class="error_explanation">
    <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<h2>User info</h2>
<!-- 以下にプロフィール画像 -->
<div>
  <%= attachment_image_tag @user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "100x100" %>
</div>

<table>
  <tbody>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction %></td>
      <!-- 上記にinstructionのカラムが必要 -->
    </tr>
  </tbody>
</table>

<div class="prpfile">
  <%= link_to "プロフィール編集", edit_user_path(@user.id) %>
</div>

<!-- form_for部分 -->
<h2>New book</h2>
<%= form_for (@book) do |f| %>
  <div class="field">
    <label for="book_title">Title</label><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="opinion">Opinion</label><br />
    <%= f.text_area :body %>
  </div>
  <%= f.submit "Create Book" %>
<% end %>


<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  	<% @books.each do |book| %>
  	  <tr>
  	  	<td>
  	  	  <%= link_to user_path(book.user_id) do %>
            <%= attachment_image_tag book.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "50x50" %>
          <% end %>
        </td>
  	    <td><%= link_to book.title, book_path(book.id) %></td>
  	    <td><%= book.body %></td>
  	  </tr>
  	<% end %>
  </tbody>
</table>
