<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2re</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span class="b">Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <!-- user_signed_in?はdeviseの機能 -->
            <% if user_signed_in? %>
            <!-- signinしている場合 -->
              <li><%= link_to " Home", user_path(current_user.id), class: "glyphicon glyphicon-home" %></li>
              <!-- current_userはdevise側が用意しているヘルパーで、ログイン中のユーザを取得できる -->
              <li><%= link_to " Users", users_path, class: "glyphicon glyphicon-user" %></li>
              <li><%= link_to " Books", books_path, class: "glyphicon glyphicon-book" %></li>
              <li><%= link_to " logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %></li>
            <% else %>
            <!-- signinしていない場合 -->
              <li><%= link_to " Home", root_path, class: "glyphicon glyphicon-home" %></li>
              <li><%= link_to " About", home_about_path, class: "glyphicon glyphicon-link about" %></li>
              <li><%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %></li>
              <li><%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>


    <div class="body">
      <div class="container">
        <% if flash[:notice] %>
          <div class="flash">
            <%= flash[:notice] %>
          </div>
        <% end %>
      </div>
    </div>


      <%= yield %>


    <footer>
    <div class='container'>
      <div class='row'>
        <div class='col-xs-3 col-xs-offset-9'>
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>
