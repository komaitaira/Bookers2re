<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2re</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <span>Bookers</span>
      <nav>
        <ul>
          <!-- user_signed_in?はdeviseの機能 -->
          <% if user_signed_in? %>
          <!-- signinしている場合 -->
            <li><%= link_to "Home", user_path(current_user.id) %></li>
            <!-- current_userはdevise側が用意しているヘルパーで、ログイン中のユーザを取得できる -->
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Books", books_path %></li>
            <li><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
          <% else %>
          <!-- signinしていない場合 -->
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "About", home_about_path %></li>
            <li><%= link_to "sign up", new_user_registration_path %></li>
            <li><%= link_to "login", new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </header>


    <div class="body">
      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
    </div>

    <%= yield %>

    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
